<form id="update-event-form">
  <div>
    <label for="event[title]">Event Name*</label>
    <input name="event[title]" id="event[title]" type="text" value="{{title}}" required>
  </div>
  <div>
    <label for="event[location]">Location*</label>
    <input name="event[location]" id="event[location]" type="text" value="{{location}}" required>
  </div>
  <div>
    <label for="event[date]">Date*</label>
    <input name="event[date]" id="event[date]" type="date" value="{{date}}" required>
  </div>
  <div>
    <label for="event[startTime]">Start Time</label>
    <input name="event[startTime]" id="event[startTime]" type="time" value="{{startTime}}">
  </div>
  <div>
    <label for="event[endTime]">End</label>
    <input name="event[endTime]" id="event[endTime]" type="time" value="{{endTime}}">
  </div>
  <div>
    <label for="event[description]">Description</label>
    <input name="event[description]" id="event[description]" type="text" value="{{description}}">
    <input type="hidden" id="event[_id]" name="event[_id]" value={{_id}}>
  </div>

  <h2>Ask your guests a question</h2>
  <h3>Editing questions after creating your event may affect responses from those who have already RSVPed</h3>
  {{#each questions}}
    <div class="event-form-questions">
      <div>
        <label for="event[questions][{{@index}}]">Question*</label>
        <input name="event[questions][{{@index}}][text]"type="text" value="Are you coming?">
      </div>

      {{#each options}}
        <div>
        <label for="event[questions][0][options][{{@index}}]">Answer option*</label>
        <input name="event[questions][0][options][{{@index}}]" type="text" value="{{@this}}">
      </div>
      {{/each}}
      
    </div>
  {{/each}}
  <p><button type="submit" class="btn btn-default">Update Event</button></p>
</form>
