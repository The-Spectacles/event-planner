<div class="wrapper">
<h1>Create An Event</h1>
  <form id="create-event-form">
    <div>
      <label for="event[title]">Event Name</label>
      <input name="event[title]" id="event[title]" type="text" required>
    </div>
    <div>
      <label for="event[location]">Location</label>
      <input name="event[location]" id="event[location]" type="text" required>
    </div>
    <div>
      <label for="event[date]">Date</label>
      <input name="event[date]" id="event[date]" type="date" required>
    </div>
    <div>
      <label for="event[startTime]">Starts</label>
      <input name="event[startTime]" id="event[startTime]" type="time">
    </div>
    <div>
      <label for="event[endTime]">Ends</label>
      <input name="event[endTime]" id="event[endTime]" type="time">
    </div>
    <div class="event-form-questions">
      <div>
        <label for="event[questions][0]">Question:</label>
        <input name="event[questions][0][text]"type="text" value="Are you coming?">
      </div>
      <div>
        <label for="event[questions][0][options][]">Answer option 1:</label>
        <input name="event[questions][0][options][]" type="text" value="Yes">
      </div>
      <div>
        <label for="event[questions][0][options]">Answer option 2:</label>
        <input name="event[questions][0][options][]" type="text" value="No">
      </div>
      <div>
        <label for="event[questions][0][options]">Answer option 3:</label>
        <input name="event[questions][0][options][]" type="text" value="Maybe">
      </div>
    </div>
    <p><button type="submit">Create Event</button></p>
  </form>
</div>
