      <input name="event[endTime]" id="event[endTime]" type="time" required>
    </div>
    <div>
      <label for="event[description]">Description</label>
      <input name="event[description]" id="event[description]" type="text" required>
    </div>
    <div>
      <label for="event[questions]">RSVP Options</label>
      <input name="event[questions]" id="event[questions]" type="text" required>
    </div>
    <p><button type="submit">Create Event</button></p>
  </form>
</div>

